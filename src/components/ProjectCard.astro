---
interface Props {
    name:        string;
    description: string;
    stack:       string[];
    sourceCode:  string;
    liveDemo:    string;
}

const { name, description, stack, sourceCode, liveDemo } = Astro.props;
---

<div class="flex flex-col gap-4 items-center bg-gray-800 py-6 rounded-lg shadow-2xl">
    <h2 class="text-2xl text-secondary font-bold">{name}</h2>
    <p class="text-md text-center px-4">{description}</p>
    {stack && (
        <ul class="flex gap-2 text-xs text-secondary">
            {stack.map((tech) => (
                <li>{tech}</li>
            ))}
        </ul>
    )}
    <div class="flex text-primary gap-2">
        {sourceCode && (
            <a href={sourceCode} target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
                </svg>
            </a>
        )}

        {liveDemo && (
            <a href={liveDemo} target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-tabler" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M8 9l3 3l-3 3"></path>
                    <path d="M13 15l3 0"></path>
                    <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"></path>
                </svg>
            </a>
        )}
    </div>

</div>